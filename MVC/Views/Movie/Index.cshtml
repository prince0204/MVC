@model IEnumerable<MVC.Models.Movies>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
@if (!Model.Any())
{
    <h3>We don't have any movies available</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <th>Name</th>
            <th>Genre</th>
        </thead>
        <tbody>
            @foreach (var movies in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movies.Name, "Details", "Movie", new { id = movies.Id },null)</td>
                    <td>@movies.Genre.Name</td>
                </tr>

            }
        </tbody>
    </table>


}
