@model MVC.Models.Movies
@{

    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>ReleaseDate: @Model.ReleaseDate.ToLongDateString()</li>
    <li>DateAdded: @Model.DateAdded.ToLongDateString()</li>
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>
